	<!-- Contact -->
		<div class="wrapper style4">
			<article id="contact" class="container small">
				<header>
					<h2>Contact us.</h2>
					<p>If we don't get back to you within 24 hours that's an automatic <strong style="color:#3BDD77">15% discount.</strong> </p>
				</header>
				<div>
					<% unless params[:errors].nil?  %> <!-- errors set by flash in contacts_controller -->
					<div class="errors">
						<h4>Please correct the following:</h4>
						<% params[:errors].each do |msg| %>
							<%= msg %>
							<br>
						<% end %>
						</div>
						<% end %>

					<div class="row">
						<div class="12u">
							<%= form_for(@contact) do |f| %> 
								<div>
								  	<div class="row"> 
										<div class="field 6u">
											<%= f.text_field :name, {:placeholder=> "Name *"} %>
										</div>
										<div class="field 6u">
											<%= f.text_field :email, {:placeholder=> "Email *"} %>
										</div>
									</div>
								   	<div class="row"> 
								    	<div class="field 12u">
								    	<%= f.text_field :subject , {:placeholder=> "Subject *"} %>
								  		</div>
							  		</div>
								   	<div class="row"> 
								    	<div class="field 12u">
								    	<%= f.text_area :message , {:placeholder=> "Message *"} %>
								  		</div>
							  		</div>
							  		<div class="row">
							    		<%= f.hidden_field :source, :value => "From Contact Form" %>
							    	</div>
									<div class="row double">
										<div class="12u">
											<ul class="actions">
												<li><%=f.submit "Send Message", :class => "contact-button" %></li>
												<li><input type="reset" value="Clear Form" class="alt" /></li>
											</ul>
										</div>
									</div>
								</div>
								<% end %>
						</div>
					</div>
