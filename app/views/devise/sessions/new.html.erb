<div id="login">
	<article  class="container">
		<div class="row">
			<div class="5u">
				<span class="image fit"><%=image_tag("mobiletablet.jpg" , :alt => "Imajine Software") %></span>
			</div>
			<div class="7u">
				<h2> Login </h2>
			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<div class ="row">
					<div class="8u field">
					<%= f.email_field :email, autofocus: true, placeholder: "Email *"  %></div>
				</div>
				<div class="row">
				  	<div class="8u field"><%= f.password_field :password, autocomplete: "off",placeholder: "Password *" %></div>
			    </div>
			    <div class=" row">
			  	<% if devise_mapping.rememberable? -%>
			    	<div class="4u field"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
			  	<% end -%>
			  	</div>

			  <div class="row">
			  		<ul class="actions">
			  			<li><%= f.submit "Log in" %></li>
			  		</ul>
			  </div>
			  <%= render "devise/shared/links" %>
			<% end %>
			</div>
		</div>
	</article>
</div>




