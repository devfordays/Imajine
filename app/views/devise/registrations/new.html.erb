<div id="register">
	<article class="container">
		<div class="row">
			<div class="5u">
				<h2 style="color:#43B3E0;">Sign up for a new account </h2>
				<h3> Once you create a new account, you will be able to track the progess of you project, manage &amp; pay invoices, and access the dashboard tailored to your business.</h3>
				<div class="row">
					<div class="4u"><span class="icon featured mobile-services fa-home"></span></div>
					<div class="4u"><span class="icon featured mobile-services fa-gears"></span></div>
					<div class="4u"><span class="icon featured mobile-services fa-user"></span></div>
				</div>
			</div>
			<div class="7u">
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				  <%= devise_error_messages! %>
				<div class="row">
					<div class="8u field">
						<%= f.email_field :email, autofocus: true, placeholder: "Email*" %>
					</div>
				</div>
				<div class="row">
					<div class="8u field">
						<%= f.password_field :password, autocomplete: "off", placeholder: "Password* (8 characters)" %>
					</div>
				</div>
				<div class="row">
					<div class="8u field">
						<%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Again" %>
					</div>
				</div>
				<div class="row">
			  		<ul class="actions">
			  			<li><%= f.submit "Create New Account" %></li>
			  		</ul>
				</div>
				<% end %>
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</article>
</div>
